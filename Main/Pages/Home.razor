@page "/"
@using radzen.Application.Services
@using radzen.Domain.Entities
@inject IEmployeeServices emp

<PageTitle>Home</PageTitle>
<div class="row">
    <div ="col-lg-6">
        <EditForm Model="@employee" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Employee Name</label>
                <InputText class="form-control" @bind-Value="employee.Name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <InputText class="form-control" @bind-Value="employee.Address" />
            </div>

            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </EditForm>
    </div>
</div>

<h1>Hello, world!</h1>



@code {
    Employee employee = new Employee();

    async Task Save()
    {
        var (flag, message) = await emp.AddAsync(employee);

        if (flag)
        {
            Console.WriteLine("Saved Successfully");
        }
        else
        {
            Console.WriteLine($"Saved UnSuccessfully: {message}");
        }
    }


}
